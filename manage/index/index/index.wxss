page {
background-color: #f6f5f5;
}

.userinfo {
    color: #aaa;
    width: 100%;
    height: 250rpx;
    display: flex;
    padding-left: 20px;
}

.userinfo-avatar {
    overflow: hidden;
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    margin-top: 45rpx;
}

.navigation {
    background-color: white;
    position: absolute;
    top: 130rpx;
    margin: 26rpx;
    width: 93%;
    height: 200rpx;
}

.nav {
    width: 49px;
    height: 49px;
    margin: 10px;
    display: inline-block;
    border-radius: 50%;
}

.nav .icon {
    margin: 9px;
}

.nav-font {
    font-size: 12px;
    margin-top: 10rpx;
    color: gray;
}

.payMessage {
    width: 93%;
    margin: 135rpx 26rpx 20rpx 26rpx;
    height: 450rpx;
    background-color: white;
}

.left_payMoney {
    width: 80px;
    display: inline-block;
}

.right_all {
    width: 70px;
    text-align: right;
    display: inline-block;
    float: right;
    margin-right: 10rpx;
}

.statistics {
    width: 93%;
    height: 300rpx;
    margin: 20rpx 26rpx;
    background-color: white;
}

.sell {
    width: 80px;
    display: inline-block;
}

.sell_title {
    line-height: 50px;
    margin-left: 20rpx;
}

.order_money {
    margin: 40rpx;
    font-size: 14px;
    color: gray;
}

.order_number {
    margin-right: 50px;
    margin-left: 20px;
    color: red;
}
.pay_money {
    margin-left: 30px;
}
.pay_money_number {
    margin-left: 20px;
    color: red;
}
.obligation {
    width: 95px;
    height: 60px;
    margin: 20rpx;
    display: inline-block;
    box-shadow: 0 0 1px 0 darkgray;
}
.number_order {
    display: block;
    color: red;
    margin: 10px 0 0 10px;
}
.order_name {
    font-size: 12px;
    color: gray;
    margin-left: 10px;
}