
page {
    background-color: #f3f0f0;
}

.pull-down {
    background-color: #f3f0f0 !important;
}

.new_order {
    width: 100%;
    height: 280rpx;
    margin-bottom: 10px;
    background-color: white;
}

.message {
    display: inline-block;
    margin: 10px 20px;
    font-size: 13px;
}

.hint {
    margin-left: 5px;
}

.time {
    float: right;
    font-size: 12px;
    color: gray;
    margin: 10px;
}

.info {
    background-color: #f3f3f0;
    width: 90%;
    margin: 0 auto;
}

.img {
    width: 180rpx;
    height: 180rpx;
}

.info_name {
    display: inline-block;
    font-size: 12px;
    position: fixed;
    margin: 15px;
}

.user {
    color: gray;
    margin-top: 20px;
}
